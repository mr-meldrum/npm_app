pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }

    environment {
        CI = 'true'
	HOME = '.'
    }

    stages {
        stage('Build') {
            steps {
		sh 'printenv || true'
		sh 'pwd || true'
		sh 'hostname || true'
                sh 'npm install'
                sh 'touch file.tmp'
            }
        }

        stage('Test') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }

        stage('Build image') {
            steps {
                echo 'Starting to build docker image'

                script {
		    docker.withRegistry('https://stag-docker-repo.clix.io:5000') {
                        def customImage = docker.build("npm-app:${env.BUILD_ID}")
                        customImage.push()
		    }
                }
            }
        }

        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                sh './jenkins/scripts/kill.sh'
            }
        }
    }
}
