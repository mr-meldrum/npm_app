pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    environment {
	HOME="."
	}
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
		sh 'printenv || true'
		sh 'pwd || true'
		sh 'hostname || true'
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                sh './jenkins/scripts/kill.sh'
            }
        }
    }
}
